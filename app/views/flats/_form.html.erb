<div class="f`lat-form col-12 col-md-6 mx-auto mt-4">

  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>

    <%= f.button :submit, class: "btn-primary col-12 mt-3" %>
  <% end %>

</div>