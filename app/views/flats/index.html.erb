<% content_for :page_title, 'Home' %>

<div class="row">
  <%= @flats.each do |flat| %>
    <div class="flat col-4 mb-4 align-items-stretch">
      <div class="border rounded-bnb h-100 shadow">
        <div class="flat-desc-wrap p-3 bg-light position-relative border-bottom">
          <div class="flat-name">
            <%= link_to flat_path(flat), class: "text-decoration-none" do %>
              <h4 class="mb-1"><%= flat.name %></h4>
            <% end %>
            <p><%= flat.address %></p>
          </div>
          <div class="flat-nums position-absolute bottom-0">
            <div class="pb-3">
              <span class="me-2"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></span>
              <span class="me-2"><i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="flat-actions">
          <div class="flat-actions-wrap px-3 py-2 d-flex flex-wrap justify-content-between">
            <div>
              <%= link_to "More Info",flat_path(flat), class: "text-decoration-none text-primary me-2" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "text-decoration-none text-warning me-2" %>  
            </div>
            <div>
              <%= link_to flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' do %>
                <i class="fas fa-times-circle"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
